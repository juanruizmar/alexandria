\newcommand{\insertCode}[1]{
    \needspace{4\baselineskip}
    \lstinputlisting[
        numbers=left, 
        numberstyle=\tiny\color{\secondaryColour},
        stepnumber=1, 
        numbersep=5pt,
        backgroundcolor=\color{\codeBackGroundColour},
        showspaces=false,
        showstringspaces=false,
        showtabs=false,
        breaklines=true,
        breakatwhitespace=false,
        postbreak=\mbox{\textcolor{\secondaryColour}{$\hookrightarrow$}\space},
        frame=single,
        basicstyle=\ttfamily,
        columns=flexible,
        captionpos=b,
    ]{#1}
}

\newcommand{\insertPicture}[1]{
    \begin{figure}[H]
        \centering
        \sbox0{\includegraphics{#1}}
        \ifdim\wd0>\textwidth
            \includegraphics[width=\textwidth, keepaspectratio]{#1}
        \else\ifdim\ht0>\textheight
            \includegraphics[height=0.9\textheight, keepaspectratio]{#1}
        \else
            \includegraphics{#1}
        \fi\fi
    \end{figure}
}
